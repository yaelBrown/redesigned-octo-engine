<link rel="stylesheet" href="/css/create.css">
<form action="/posts/create" method="POST" enctype="multipart/form-data">
  <h2>Create Post</h2>
  <table>
    <tr>
      <td>
        <label for="title">Title</label>
      </td>
      <td>
        <input type="text" id="title" name="title" placeholder="Title of Post" />
      </td>
    </tr>
    <tr>
      <td>
        <label for="summary">Title</label>
      </td>
      <td>
        <input type="text" id="summary" name="summary" placeholder="Summary of Post" />
      </td>
    </tr>
    <tr>
      <td>
        <label for="content">Content</label>
      </td>
      <td>
        <textarea id="content" name="content" placeholder="Content of Post" rows="10" cols="30" ></textarea>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <fieldset>
          <legend>Post Type: </legend>
          <input type="radio" id="money" name="post-type" value="money" />
          <label for="money">Money</label>
          <br/>
          <input type="radio" id="crypto" name="post-type" value="crypto" />
          <label for="crypto">Crypto</label>
          <br/>
          <input type="radio" id="finEd" name="post-type" value="finEd" checked/>
          <label for="finEd">finEd</label>
        </fieldset>
      </td>
    </tr>
    <tr>
      <td>
        <button type="reset">Reset</button>
      </td>
      <td>
        <button type="submit">Submit</button>
      </td>
    </tr>
  </table>
</form>